  <script>
  const bywhom=(function getInviteCode() {
    function decode (str) {
        var ret='', a='a'.charCodeAt(), z='z'.charCodeAt(), Z='Z'.charCodeAt(), A='A'.charCodeAt(), char0='0'.charCodeAt(), char9='9'.charCodeAt(); 
        function toNum(c) {
            if (c<=z && c>=a) return c-a;
            if (c<=Z && c>=A) return 26+c-A;
            if (c>=char0 && c<=char9) return 52+c-char0;
            if (c=='-'.charCodeAt()) return 62;
            if (c=='_'.charCodeAt()) return 63;
            return NaN; 
        }
        for (var i=0; i<str.length; i+=2) {
            var _h=str.charCodeAt(i), _l=str.charCodeAt(i+1);
            var x=toNum(_h)*64+toNum(_l);
            ret+=x.toString(16);
        }
        return ret;
    }

    var x=new URLSearchParams(location.search);
    var possibleCode;
    for (var [k, v] of x) {
      if (v=="" && k.length==8) {
        possibleCode=k;
        break;
      }
    }
    if (possibleCode) return decode(possibleCode);
    return null;
  })();

  if (!bywhom) {
    showStep2();
  }

  function showStep2() {
    document.getElementById('step1').style.display='none';
    document.getElementById('step2').style.display='block';
  }
  function continueFB() {
    FB.getLoginStatus(response=>{
      if (response.status!='connected') return console.error(response);
      const socket=io();
      socket.emit('fber_invited', response.authResponse.accessToken, bywhom, (err)=>{
        if (err) return alert(err);
        showStep2();        
      })
    });
  }
  function withGoogle(googleUser) {
    const socket=io();
    socket.emit('gooer_invited', googleUser.getAuthResponse().id_token, bywhom, (err)=>{
      if (err) return alert(err);
      showStep2();        
    })
  }
  </script>
